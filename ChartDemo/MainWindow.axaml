<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="using:ChartDemo"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="ChartDemo.MainWindow"
        Title="Chart Demo"
        UseLayoutRounding="False"
        Width="1003" Height="652"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:MainWindowViewModel/>
    </Window.DataContext>
    <Window.Styles>
        <!-- Slider Fee -->
        <Style Selector="Slider.cursor">
            <Setter Property="RenderTransform">
                <RotateTransform Angle="-180"></RotateTransform>
            </Setter>
        </Style>
        <Style Selector="Slider.cursor /template/ RepeatButton#PART_DecreaseButton">
            <Setter Property="Background" Value="{DynamicResource SliderTrackFill}" />
        </Style>
        <Style Selector="Slider:pointerover.cursor /template/ RepeatButton#PART_DecreaseButton">
            <Setter Property="Background" Value="{DynamicResource SliderTrackFillPointerOver}" />
        </Style>
        <Style Selector="Slider:pressed.cursor /template/ RepeatButton#PART_DecreaseButton">
            <Setter Property="Background" Value="{DynamicResource SliderTrackFillPressed}" />
        </Style>
        <Style Selector="Slider:horizontal.cursor">
            <Setter Property="Background" Value="{DynamicResource SliderTrackFill}" />
        </Style>
        <!-- LineChart Labels -->
        <Style Selector="local|LineChart.labels">
            <Setter Property="LabelForeground" Value="Black" />
            <Setter Property="LabelAngle" Value="-45" />
            <Setter Property="LabelOffset" Value="15" />
            <Setter Property="LabelHeight" Value="45" />
            <Setter Property="LabelAlignment" Value="Left" />
            <Setter Property="LabelFontFamily" Value="Arial" />
            <Setter Property="LabelFontStyle" Value="Normal" />
            <Setter Property="LabelFontWeight" Value="Normal" />
            <Setter Property="LabelFontSize" Value="12" />
        </Style>
        <!-- LineChart Cursor -->
        <Style Selector="local|LineChart.cursor">
            <Setter Property="CursorStroke" Value="#72BD81" />
            <Setter Property="CursorThickness" Value="2" />
        </Style>
        <!-- LineChart XAxis -->
        <Style Selector="local|LineChart.xAxis">
            <Setter Property="XAxisStroke" Value="Black" />
            <Setter Property="XAxisStrokeThickness" Value="1" />
            <Setter Property="XAxisArrowSize" Value="3.5" />
        </Style>
        <!-- LineChart YAxis -->
        <Style Selector="local|LineChart.yAxis">
            <Setter Property="YAxisStroke" Value="Black" />
            <Setter Property="YAxisStrokeThickness" Value="1" />
            <Setter Property="YAxisArrowSize" Value="3.5" />
        </Style>
        <!-- LineChart YAxis Title -->
        <Style Selector="local|LineChart.yAxisTitle">
            <Setter Property="YAxisTitleForeground" Value="Black" />
            <Setter Property="YAxisTitleAngle" Value="270" />
            <Setter Property="YAxisTitleOffset" Value="200" />
            <Setter Property="YAxisTitleHeight" Value="0" />
            <Setter Property="YAxisTitleAlignment" Value="Right" />
            <Setter Property="YAxisTitleFontFamily" Value="Arial" />
            <Setter Property="YAxisTitleFontStyle" Value="Normal" />
            <Setter Property="YAxisTitleFontWeight" Value="Normal" />
            <Setter Property="YAxisTitleFontSize" Value="18" />
        </Style>
        <!-- LineChart Border -->
        <Style Selector="local|LineChart.border">
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="BorderRadiusX" Value="4" />
            <Setter Property="BorderRadiusY" Value="4" />
        </Style>
    </Window.Styles>
    <TabControl>
        <TabItem Header="Solid">
            <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <DockPanel DockPanel.Dock="Bottom">
                    <Label Content="_Fee:" Width="60" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <Slider x:Name="CursorValue1" 
                            Classes="cursor"
                            Minimum="2" 
                            Maximum="1008" 
                            Value="36" 
                            Margin="0,0,30,0"/>
                </DockPanel>
                <local:LineChart Classes="labels cursor border yAxis yAxisTitle"
                                 Width="785"
                                 Height="428"
                                 Values="{Binding Values}"
                                 Labels="{Binding Labels}"
                                 MinValue="2"
                                 MaxValue="1008"
                                 LogarithmicScale="False"
                                 ValuesMargin="60,30,30,60"
                                 Fill="#C6DAFC"
                                 Stroke="#4285F4"
                                 StrokeThickness="2"
                                 CursorValue="{Binding #CursorValue1.Value}"
                                 YAxisTitle="More Expensive">
                </local:LineChart>
            </DockPanel>
        </TabItem>
        <TabItem Header="LinearGradient">
            <DockPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <DockPanel DockPanel.Dock="Bottom">
                    <Label Content="_Fee:" Width="60" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <Slider x:Name="CursorValue2" 
                            Classes="cursor"
                            Minimum="2" 
                            Maximum="1008" 
                            Value="36" 
                            Margin="0,0,30,0"/>
                </DockPanel>
                <local:LineChart Classes="labels cursor border yAxis yAxisTitle"
                                 Width="785"
                                 Height="428"
                                 Values="{Binding Values}"
                                 Labels="{Binding Labels}"
                                 MinValue="2"
                                 MaxValue="1008"
                                 LogarithmicScale="False"
                                 ValuesMargin="60,30,30,60"
                                 StrokeThickness="2"
                                 CursorStroke="#72BD81"
                                 CursorThickness="2"
                                 CursorValue="{Binding #CursorValue2.Value}"
                                 YAxisTitle="More Expensive">
                    <local:LineChart.Fill>
                        <LinearGradientBrush StartPoint="50%,0%" EndPoint="50%,100%">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0.0" Color="#4285F4"/>
                                <GradientStop Offset="0.5" Color="#C6DAFC"/>
                                <GradientStop Offset="1.0" Color="#FFFFFF"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </local:LineChart.Fill>
                    <local:LineChart.Stroke>
                        <LinearGradientBrush StartPoint="0%,50%" EndPoint="100%,50%">
                            <LinearGradientBrush.GradientStops>
                                <GradientStop Offset="0.0" Color="#4285F4"/>
                                <GradientStop Offset="1.0" Color="#4285F4"/>
                            </LinearGradientBrush.GradientStops>
                        </LinearGradientBrush>
                    </local:LineChart.Stroke>
                </local:LineChart>
                </DockPanel>
        </TabItem>
    </TabControl>
</Window>
